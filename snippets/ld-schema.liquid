{% endcapture %}

{% capture ld_slogan %}"HILITING GOBOS & PROJECTORS"{% endcapture %}
{% capture ld_image %}"https://www.hiliting.com/cdn/shop/files/1-5_9ed34e92-75f2-462e-a1e2-7fa942876b09_200x.png"{% endcapture %}
{% capture ld_logo %}"https://www.hiliting.com/cdn/shop/files/3_32x32_23ea58a0-c43f-4c30-8af5-6f5f24c96b6c.png"{% endcapture %}
{% capture ld_email %}"info@hiliting.com"{% endcapture %}
{% capture ld_description %}"{{  page_description }}"{% endcapture %}
{% capture ld_location %}"425 S Pine St, San Gabriel, CA, 91776, United State"{% endcapture %}
{% capture ld_same_as %}
[
  "https://www.facebook.com/Hiliting-261591384539845/",
  "https://www.instagram.com/hilitingprojector/",
  "https://www.pinterest.com/hilitinggoboprojector/",
  "https://www.youtube.com/@hiliting5785"
]
{% endcapture %}
{% capture ld_founder %}
[
  {
    "@type": "Person",
    "name": "Vincent",
    "jobTitle": "CEO"
  }
]
{% endcapture %}
{% capture ld_brand %}
{
  "@context": "https://schema.org/Brand",
  "@type": "Brand",
  "name": "Hiliting",
  "description": {{- ld_description -}},
  "logo": {{- ld_logo -}},
  "slogan": {{- ld_slogan -}}
}
{% endcapture %}

{% comment %} {{ template }} {% endcomment %}

{% if template == 'index' %}
  {% comment %} 首页结构化数据 {% endcomment %}
  <script type="application/ld+json">
    [
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Hiliting",
        "url": "https://www.hiliting.com/",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://www.hiliting.com/search?q={query}",
          "query": "required"
        }
      },
      {
        "@context": "https://schema.org",
        "@type": "OnlineStore",
        "name": "Hiliting",
        "url": "https://www.hiliting.com",
        "logo": {{- ld_logo -}},
        "description": {{-ld_description-}},
        "foundingDate": "2018",
        "slogan": {{- ld_slogan -}},
        "address": {{- ld_address -}},
        "areaServed": "Worldwide",
        "contactPoint": {
          "@type": "ContactPoint",
          {% comment %} "telephone": "", {% endcomment %}
          "contactType": "customer service",
          "email": {{-ld_email-}},
          "availableLanguage": ["en"]
        },
        "sameAs": {{ ld_same_as }}
      },
      {
        "@context": "http://www.schema.org",
        "@type": "LocalBusiness",
        "name": "Hiliting",
        "paymentAccepted": "Credit Card, PayPal, Shop Pay, Google Pay",
        "priceRange": "$",
        "image": {{-ld_image-}},
        "email": {{-ld_email-}},
        {% comment %} "telephone": "", {% endcomment %}
        "address": {{-ld_address-}}
      },
      {
        "@context": "http://www.schema.org",
        "@type": "Corporation",
        "name": "Hiliting",
        "legalName": "Hiliting",
        "url": "https://www.hiliting.com",
        "image": {{- ld_image -}},
        "logo": {{- ld_logo -}},
        "brand": {{- ld_brand -}},
        "location": {{- ld_location -}},
        "telephone": "",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "",
          "contactType": "customer service",
          "email": {{- ld_email -}},
          "availableLanguage": ["en"]
        },
        "address": {{- ld_address-}},
        "founder": {{- ld_founder -}},
        "foundingDate": "2018",
        "foundingLocation": {{-  ld_location -}},
        "description": {{- ld_description -}},
        "sameAs": {{ ld_same_as }}
      },
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "name": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": "https://www.hiliting.com"
          }
        ]
      }
    ]
  </script>
{% elsif template == 'collection' %}
  {% comment %} 产品集合页 https://www.hiliting.com/collections/all {% endcomment %}
  <script type="application/ld+json">
    [
      {% comment %} 分页描述 {% endcomment %}
      {% comment %} {
        "@context": "https://schema.org",
        "@type": "ItemList",
        "@id": "https://www.hiliting.com/collections/all#mainlist",
        "url": "https://www.hiliting.com/collections/all",
        "name": "Products",
        "brand": {
          "@type": "Brand",
          "name": "Hiliting"
        },
        "description": "",
        "numberOfItems": {{  collection.all_products_count}},
        "numberOfItems": {{   section|json }},
        "itemListOrder": "Descending",
        "itemListElement": [
          {% for product in collection.products %}
            {
              "@type": "ListItem",
              "position": {{ forloop.index }},
              "url": "{{ shop.url }}{{ product.url }}"
            }{% if forloop.last == false %},{% endif %}
          {% endfor %}
        ]
      }, {% endcomment %}
      {{ ld_brand }},
    ]
  </script>
{% endif %}

{% if ld_json != blank %}
  <script type="application/ld+json">
    {{- ld_json -}}
  </script>
{% endif %}
