        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "contact",
        "settings": {
          "contact_phone": "(333) 123 456",
          "contact_email": "john@doe.com"
        }
      },
      {
        "type": "social",
        "settings": {}
      },
      {
        "type": "links",
        "settings": {
          "menu_linklist": "footer"
        }
      },
      {
        "type": "newsletter",
        "settings": {}
      }
    ]
  }
}
{% endschema %}
